@page "/products/deleteproduct/{productId}"
@inherits DeleteProductBase

@{ 
    var photoPath = "/images/products/" + (Product.ImageFile ?? "noimage.jpg");
}

<div class="col-md-8 text-center divCenter mt-5">
    <div class="card">
        <div class="card-header">
            <h3 class="text-danger">@($"Are you sure you want to delete {Product.Name}?") </h3>
        </div>
        <div class="card-body">
            <img src="@photoPath" class="card-img-top img-thumbnail imageThumbnail" />
        </div>
        <div class="card-footer">
            <a href="/" class="btn btn-primary">Back</a>
            <button type="button" class="btn btn-danger" @onclick="Handle_Delete">Delete</button>
        </div>
    </div>
</div>